##################################################################################################################
#
# L1 tracking -- this can either be compiled standalone (outside CMSSW) or within CMSSW 
#
##################################################################################################################


##################################################################################################################
# for CMSSW compilation, follow these instructions to set up 
##################################################################################################################

cmsrel CMSSW_10_2_5
cd CMSSW_10_2_5/src
cmsenv

git init

mkdir L1Trigger 
cd L1Trigger/

git clone https://gitlab.cern.ch/cms-tracker-phase2-backend-development/BE_software/TrackFindingTracklet.git
git clone https://gitlab.cern.ch/cms-tracker-phase2-backend-development/BE_software/TrackFindingTMTT.git

cd .. 

scramv1 b -j 8

cd L1Trigger/TrackFindingTracklet/test/ 

cmsRun L1TrackNtupleMaker_cfg.py 


##################################################################################################################
# for standalone compilcation (currently not supported with KF) 
##################################################################################################################

git clone https://gitlab.cern.ch/cms-tracker-phase2-backend-development/BE_software/TrackFindingTracklet.git

cd ../TrackFindingTracklet/test
make 

